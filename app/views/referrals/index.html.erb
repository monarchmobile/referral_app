<h1>Listing referrals</h1>

<table>
  <tr>
    <th>Urgency</th>
    <th>Date submitted</th>
    <th>Inside</th>
    <th>Card given</th>
    <th>Preferred contact</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @referrals.each do |referral| %>
  <tr>
    <td><%= referral.urgency %></td>
    <td><%= referral.date_submitted %></td>
    <td><%= referral.inside %></td>
    <td><%= referral.card_given %></td>
    <td><%= referral.preferred_contact %></td>
    <td><%= referral.comments %></td>
    <td><%= link_to 'Show', referral %></td>
    <td><%= link_to 'Edit', edit_referral_path(referral) %></td>
    <td><%= link_to 'Destroy', referral, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

