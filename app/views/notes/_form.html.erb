<div class="new_note_form">
	<%= content_tag :div, "close", class: "close_btn" %>
	<h2>Notes</h2>

	<%= form_for @note, remote: true do |f| %>
		<%= render 'shared/errors', object: @note %>
		<%= f.hidden_field :referral_id, value: @referral.id %>
		<div class="field">
			<%= f.label :written_note %><br />
			<%= f.text_area :written_note, col: 20, rows:3 %>
		</div>
		<div class="actions">
			<%= f.submit %>
		</div>
	<% end %>
</div>